/* ----------------------- Start implementation -----------------------------*/
eMBErrorCode
eMBInit(MBInstance* inst, eMBMode eMode, UCHAR ucSlaveAddress, UCHAR ucPort, ULONG ulBaudRate, eMBParity eParity )
{
	inst->eMBCurrentState = STATE_NOT_INITIALIZED;
    eMBErrorCode    eStatus = MB_ENOERR;

    /* check preconditions */
    if( ( ucSlaveAddress == MB_ADDRESS_BROADCAST ) ||
        ( ucSlaveAddress < MB_ADDRESS_MIN ) || ( ucSlaveAddress > MB_ADDRESS_MAX ) )
    {
    	eStatus = MB_EINVAL;
    }
    else
    {
    	inst->ucMBAddress = ucSlaveAddress;

        switch ( eMode )
        {
#if MB_RTU_ENABLED > 0
        case MB_RTU:
        	inst->pvMBFrameStartCur = eMBRTUStart;
        	inst->pvMBFrameStopCur = eMBRTUStop;
        	inst->peMBFrameSendCur = eMBRTUSend;
        	inst->peMBFrameReceiveCur = eMBRTUReceive;
        	inst->pvMBFrameCloseCur = MB_PORT_HAS_CLOSE ? vMBPortClose : NULL;
        	inst->pxMBFrameCBByteReceived = xMBRTUReceiveFSM;
        	inst->pxMBFrameCBTransmitterEmpty = xMBRTUTransmitFSM;
        	inst->pxMBPortCBTimerExpired = xMBRTUTimerT35Expired;

        	eStatus = eMBRTUInit( inst->ucMBAddress, ucPort, ulBaudRate, eParity );
            break;
#endif
#if MB_ASCII_ENABLED > 0
        case MB_ASCII:
        	inst-> pvMBFrameStartCur = eMBASCIIStart;
        	inst->pvMBFrameStopCur = eMBASCIIStop;
        	inst->peMBFrameSendCur = eMBASCIISend;
        	inst->peMBFrameReceiveCur = eMBASCIIReceive;
        	inst->pvMBFrameCloseCur = MB_PORT_HAS_CLOSE ? vMBPortClose : NULL;
        	inst->pxMBFrameCBByteReceived = xMBASCIIReceiveFSM;
        	inst->pxMBFrameCBTransmitterEmpty = xMBASCIITransmitFSM;
        	inst->pxMBPortCBTimerExpired = xMBASCIITimerT1SExpired;

        	eStatus = eMBASCIIInit( inst->ucMBAddress, ucPort, ulBaudRate, eParity );
            break;
#endif
        default:
        	eStatus = MB_EINVAL;
        }

        if( eStatus == MB_ENOERR )
        {
            if( !xMBPortEventInit(  ) )
            {
                /* port dependent event module initalization failed. */
            	eStatus = MB_EPORTERR;
            }
            else
            {
            	inst->eMBCurrentMode = eMode;
            	inst->eMBCurrentState = STATE_DISABLED;
            }
        }
    }
    return eStatus;
}

#if MB_TCP_ENABLED > 0
eMBErrorCode
eMBTCPInit(MBInstance* inst, USHORT ucTCPPort )
{
    eMBErrorCode    eStatus = MB_ENOERR;

    if( ( eStatus = eMBTCPDoInit( ucTCPPort ) ) != MB_ENOERR )
    {
        inst->eMBCurrentState = STATE_DISABLED;
    }
    else if( !xMBPortEventInit(  ) )
    {
        /* Port dependent event module initalization failed. */
        eStatus = MB_EPORTERR;
    }
    else
    {
        pvMBFrameStartCur = eMBTCPStart;
        pvMBFrameStopCur = eMBTCPStop;
        peMBFrameReceiveCur = eMBTCPReceive;
        peMBFrameSendCur = eMBTCPSend;
        pvMBFrameCloseCur = MB_PORT_HAS_CLOSE ? vMBTCPPortClose : NULL;
        inst->ucMBAddress = MB_TCP_PSEUDO_ADDRESS;
        inst->eMBCurrentMode = MB_TCP;
        inst->eMBCurrentState = STATE_DISABLED;
    }
    return eStatus;
}
#endif

eMBErrorCode
eMBRegisterCB(MBInstance* inst, UCHAR ucFunctionCode, pxMBFunctionHandler pxHandler )
{
    int             i;
    eMBErrorCode    eStatus;

    if( ( 0 < ucFunctionCode ) && ( ucFunctionCode <= 127 ) )
    {
        ENTER_CRITICAL_SECTION(  );
        if( pxHandler != NULL )
        {
            for( i = 0; i < MB_FUNC_HANDLERS_MAX; i++ )
            {
                if( ( inst->xFuncHandlers[i].pxHandler == NULL ) ||
                    ( inst->xFuncHandlers[i].pxHandler == pxHandler ) )
                {
                	inst->xFuncHandlers[i].ucFunctionCode = ucFunctionCode;
                	inst->xFuncHandlers[i].pxHandler = pxHandler;
                    break;
                }
            }
            eStatus = ( i != MB_FUNC_HANDLERS_MAX ) ? MB_ENOERR : MB_ENORES;
        }
        else
        {
            for( i = 0; i < MB_FUNC_HANDLERS_MAX; i++ )
            {
                if( inst->xFuncHandlers[i].ucFunctionCode == ucFunctionCode )
                {
                	inst->xFuncHandlers[i].ucFunctionCode = 0;
                	inst->xFuncHandlers[i].pxHandler = NULL;
                    break;
                }
            }
            /* Remove can't fail. */
            eStatus = MB_ENOERR;
        }
        EXIT_CRITICAL_SECTION(  );
    }
    else
    {
        eStatus = MB_EINVAL;
    }
    return eStatus;
}


eMBErrorCode
eMBClose(MBInstance* inst)
{
    eMBErrorCode    eStatus = MB_ENOERR;

    if( inst->eMBCurrentState == STATE_DISABLED )
    {
        if( inst->pvMBFrameCloseCur != NULL )
        {
        	inst->pvMBFrameCloseCur(  );
        }
    }
    else
    {
        eStatus = MB_EILLSTATE;
    }
    return eStatus;
}

eMBErrorCode
eMBEnable(MBInstance* inst)
{
    eMBErrorCode    eStatus = MB_ENOERR;

    if( inst->eMBCurrentState == STATE_DISABLED )
    {
        /* Activate the protocol stack. */
    	inst->pvMBFrameStartCur(  );
    	inst->eMBCurrentState = STATE_ENABLED;
    }
    else
    {
        eStatus = MB_EILLSTATE;
    }
    return eStatus;
}

eMBErrorCode
eMBDisable(MBInstance* inst)
{
    eMBErrorCode    eStatus;

    if( inst->eMBCurrentState == STATE_ENABLED )
    {
    	inst->pvMBFrameStopCur(  );
        inst->eMBCurrentState = STATE_DISABLED;
        eStatus = MB_ENOERR;
    }
    else if(inst->eMBCurrentState == STATE_DISABLED )
    {
        eStatus = MB_ENOERR;
    }
    else
    {
        eStatus = MB_EILLSTATE;
    }
    return eStatus;
}

eMBErrorCode
eMBPoll(MBInstance* inst)
{
    static UCHAR   *ucMBFrame;
    static UCHAR    ucRcvAddress;
    static UCHAR    ucFunctionCode;
    static USHORT   usLength;
    static eMBException eException;

    int             i;
    eMBErrorCode    eStatus = MB_ENOERR;
    eMBEventType    eEvent;

    /* Check if the protocol stack is ready. */
    if( inst->eMBCurrentState != STATE_ENABLED )
    {
        return MB_EILLSTATE;
    }

    /* Check if there is a event available. If not return control to caller.
     * Otherwise we will handle the event. */
    if( xMBPortEventGet( &eEvent ) == TRUE )
    {
        switch ( eEvent )
        {
        case EV_READY:
            break;

        case EV_FRAME_RECEIVED:
            eStatus = inst->peMBFrameReceiveCur( &ucRcvAddress, &ucMBFrame, &usLength );
            if( eStatus == MB_ENOERR )
            {
                /* Check if the frame is for us. If not ignore the frame. */
                if( ( ucRcvAddress == inst->ucMBAddress ) || ( ucRcvAddress == MB_ADDRESS_BROADCAST ) )
                {
                    ( void )xMBPortEventPost( EV_EXECUTE );
                }
            }
            break;

        case EV_EXECUTE:
            ucFunctionCode = ucMBFrame[MB_PDU_FUNC_OFF];
            eException = MB_EX_ILLEGAL_FUNCTION;
            for( i = 0; i < MB_FUNC_HANDLERS_MAX; i++ )
            {
                /* No more function handlers registered. Abort. */
                if( inst->xFuncHandlers[i].ucFunctionCode == 0 )
                {
                    break;
                }
                else if( inst->xFuncHandlers[i].ucFunctionCode == ucFunctionCode )
                {
                    eException = inst->xFuncHandlers[i].pxHandler( ucMBFrame, &usLength );
                    break;
                }
            }

            /* If the request was not sent to the broadcast address we
             * return a reply. */
            if( ucRcvAddress != MB_ADDRESS_BROADCAST )
            {
                if( eException != MB_EX_NONE )
                {
                    /* An exception occured. Build an error frame. */
                    usLength = 0;
                    ucMBFrame[usLength++] = ( UCHAR )( ucFunctionCode | MB_FUNC_ERROR );
                    ucMBFrame[usLength++] = eException;
                }
                if( ( inst->eMBCurrentMode == MB_ASCII ) && MB_ASCII_TIMEOUT_WAIT_BEFORE_SEND_MS )
                {
                    vMBPortTimersDelay( MB_ASCII_TIMEOUT_WAIT_BEFORE_SEND_MS );
                }
                eStatus = peMBFrameSendCur( inst->ucMBAddress, ucMBFrame, usLength );
            }
            break;

        case EV_FRAME_SENT:
            break;
        }
    }
    return MB_ENOERR;
}
